# Application
APP_NAME=NeonExFramework
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:8080
DEBUG=true

# Database
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neonexframework
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL_MODE=disable

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=console

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email (Optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@neonexframework.dev
MAIL_FROM_NAME=NeonEx Framework

# File Storage
STORAGE_DRIVER=local
STORAGE_PATH=./storage

# Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# API
API_VERSION=v1
CORS_ALLOWED_ORIGINS=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60s

# Frontend
THEME_DEFAULT=default
FRONTEND_URL=http://localhost:8080

# Payment Gateways (Optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Admin Panel
ADMIN_PATH=/admin
ADMIN_ITEMS_PER_PAGE=20

# CMS Settings
CMS_DEFAULT_TEMPLATE=default
CMS_ENABLE_VERSIONING=true
CMS_AUTO_SAVE_INTERVAL=30000

# E-commerce Settings
ECOMMERCE_CURRENCY=THB
ECOMMERCE_TAX_RATE=7
ECOMMERCE_SHIPPING_ENABLED=true
